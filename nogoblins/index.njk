---
layout: base-layout.njk
title: Not Goblins!
override:tags: ["race"]
pagination:
  data: collections.nogoblin
  size: 8
  reverse: false
  alias: posts
---
{% for post in posts %}
  <section>

    <h2>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h2>

    <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>

    {% excerpt post %}

    <a href="{{ post.url | url }}">Read more</a>

  </section>
{% endfor %}

