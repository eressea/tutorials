---
layout: base-layout.njk
tags: ['race']
title: "Goblins"
pagination:
  data: collections.goblins
  size: 10
  reverse: false
  alias: posts
---

<h1>Goblin Tutorial</h1>

{% for post in posts %}
  <article>

    <h1>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h1>

    <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>

    {% excerpt post %}

    <a href="{{ post.url | url }}">Read more</a>

  </article>
{% endfor %}
